@page "/register"
@using _2024_25_Islington_1stSemBlazorMAUI.Services.Interface
@inject IUserService UserService

<div class="register-body">
    <h1 class="h3 mb-3 fw-normal text-center">Register New User</h1>

    <div class="form-floating">
        <input type="text" class="form-control" @bind="Username" placeholder="Username" />
        <label>Username</label>
    </div>
    <div class="form-floating mt-3">
        <input type="password" class="form-control" @bind="Password" placeholder="Password" />
        <label>Password</label>
    </div>
    <button class="btn btn-lg btn-primary mt-3" onclick="@RegisterUser">Register</button>

    @if (!string.IsNullOrEmpty(Message))
    {
        <div class="text-info mt-3">@Message</div>
    }
</div>


